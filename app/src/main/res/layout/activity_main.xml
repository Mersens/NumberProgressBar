<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:Mersens="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.mersens.numberprogressbar.numberprogressbar.NumberProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            Mersens:progress_reache_color="#e91e62"
            Mersens:progress_text_color="#e91e62"
            Mersens:progress_unreache_color="#f8bbd0"
            android:padding="16dp"
            android:progress="0" />

        <com.mersens.numberprogressbar.numberprogressbar.NumberProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            Mersens:progress_reache_color="#5677fc"
            Mersens:progress_text_color="#5677fc"
            Mersens:progress_unreache_color="#d0d9ff"
            android:padding="16dp"
            android:progress="75" />

        <com.mersens.numberprogressbar.numberprogressbar.NumberProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            Mersens:progress_reache_color="#009688"
            Mersens:progress_text_color="#009688"
            Mersens:progress_unreache_color="#b2dfdb"
            android:padding="16dp"
            android:progress="50" />

        <com.mersens.numberprogressbar.numberprogressbar.NumberProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            Mersens:progress_reache_color="#cddc39"
            Mersens:progress_text_color="#cddc39"
            Mersens:progress_unreache_color="#f0f4c3"
            android:padding="16dp"
            android:progress="25" />

        <com.mersens.numberprogressbar.numberprogressbar.NumberProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            Mersens:progress_reache_color="#795548"
            Mersens:progress_text_color="#795548"
            Mersens:progress_unreache_color="#d7ccc8"
            android:padding="16dp"
            android:progress="0" />
        <com.mersens.numberprogressbar.numberprogressbar.NumberProgressBarByView
            android:id="@+id/numberbar1"
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            Mersens:progress_current="0"
            style="@style/NumberProgressBar_Default"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>